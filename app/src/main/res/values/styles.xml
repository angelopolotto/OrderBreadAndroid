<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="elevation">@dimen/elevation_default</item>
        <item name="android:textViewStyle">@style/TextViewPrimary</item>
        <item name="buttonStyle">@style/ButtonDefault</item>
    </style>

    <style name="TextViewTitle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">@dimen/text_title</item>
    </style>

    <style name="TextViewPrimary" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">@dimen/text_primary</item>
    </style>

    <style name="TextViewSecondary" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">@dimen/text_secondary</item>
    </style>

    <style name="ButtonDefault" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/text_primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/primaryColor</item>
        <item name="android:textColor">@color/textWhite</item>
        <item name="android:height">40dp</item>
    </style>

    <style name="Ripple">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ImageButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>
