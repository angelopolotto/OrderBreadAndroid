<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             tools:showIn="@layout/activity_cart">

    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/ic_launcher_background"
            android:id="@+id/ivBreadThumbnail"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/margin_default"
            android:contentDescription="@string/cart_item_bread_desc"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="@+id/tvBreadName"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvTotalPrice"
            android:scaleType="centerCrop"/>

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvBreadName"
            android:layout_marginEnd="@dimen/margin_default"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivBreadThumbnail"
            android:layout_marginStart="16dp"
            tools:text="Pão rústico de azeite"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/tvTotalPrice"
            android:text="@string/cart_item_total"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/TextViewSecondary"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/ccQuantity"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivBreadThumbnail"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <app.mobify.orderbreadandroid.widgets.CustomCounter
            android:id="@+id/ccQuantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tvPrice"
            app:layout_constraintStart_toEndOf="@+id/ivBreadThumbnail"
            android:layout_marginStart="16dp"
            />

    <TextView
            android:id="@+id/tvPrice"
            android:text="@string/cart_item_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/TextViewSecondary"
            app:layout_constraintTop_toBottomOf="@+id/tvBreadName"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@+id/ivBreadThumbnail"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>