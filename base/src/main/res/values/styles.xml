<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:colorPrimary">@color/primaryColor</item>
        <item name="android:colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="android:colorAccent">@color/accentColor</item>
        <item name="android:elevation">@dimen/elevation_default</item>
        <item name="android:textViewStyle">@style/TextViewPrimary</item>
        <item name="android:buttonStyle">@style/ButtonDefault</item>
    </style>

    <style name="TextViewTitle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">@dimen/text_title</item>
    </style>

    <style name="TextViewPrimary" parent="android:Widget.TextView">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">@dimen/text_primary</item>
    </style>

    <style name="TextViewSecondary" parent="android:Widget.TextView">
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">@dimen/text_secondary</item>
    </style>

    <style name="ButtonDefault" parent="android:Widget.Button">
        <item name="android:textSize">@dimen/text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/primaryColor</item>
        <item name="android:textColor">@color/textWhite</item>
    </style>

    <style name="Ripple">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ImageButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>
